                        </div>
                        <div class="table-responsive" style="font-size: small;">
                            <table id="MyTable" class="display" cellspacing="0" width="100%" style="font-size: small;">
                                <thead>
                                    <tr>
                                        <th scope="col">NO</th>
                                        <th scope="col">IMAGE</th>
                                        <th scope="col">NAME</th>
                                        <th scope="col">CATEGORY</th>
                                        <th scope="col">QUANTITY</th>
                                        <th scope="col">PRICE</th>
                                        <th scope="col" style="padding-left: 41px;">UPDATE</th>
                                        <th scope="col" style=" padding-left: 32px;">UNLIST</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each productData}}
                                    <tr scope="row">

                                        <td>{{incrementedIndex @index}}</td>

                                        <td>
                                            <img style="width: 40px; height: 40px;border-radius: 20px;"
                                                src="{{this.imageUrl.[0].url}}" alt="Product Image">
                                        </td>
                                        <td data-bs-toggle="tooltip" data-bs-placement="bottom" class="productName">{{this.name}}</td>
                                        <td style="padding-left: 24px;">{{this.category.category}}</td>
                                        <td style="padding-left: 28px;"> {{this.stock}} </td>
                                        <td>{{this.price}}</td>
                                        <td> &nbsp;&nbsp;&nbsp; <button class="buttonstyle" style="width: 90px;
                                                        border: none;
                                                        height: 28px;
                                                        border-radius: 14px;
                                                        background-color: #009cff;"><a
                                                    href="/admin/edit_product/{{this._id}}" class="linkstyle">Edit</a>
                                            </button>
                                        </td>
                                        {{#if this.is_blocked}}
                                        <td> <button class="buttonstyle" style=" width: 98px;
